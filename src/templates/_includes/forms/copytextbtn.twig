{% set attributes = {
    id: id ?? "copytext#{random()}",
    class: (class ?? [])|explodeClass|push('copytextbtn'),
    role: 'button',
    title: 'Copy to clipboard'|t('app'),
    aria: {
        describedby: describedBy ?? false,
    },
    tabindex: '0',
} %}

<craft-copy-attribute>
    {% tag 'div' with attributes %}
        {{ tag('span', {
            class: 'copytextbtn__value',
            text: value,
        }) }}
    {% endtag %}
</craft-copy-attribute>