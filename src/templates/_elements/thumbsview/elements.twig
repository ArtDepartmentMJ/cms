{% apply spaceless %}

  {% for element in elements %}
    {% tag 'li' with {
      class: element.id in disabledElementIds ? 'disabled' : null,
      data: {
        id: element.id,
      },
    } %}
      {{ elementChip(element, {
        context: context ?? 'index',
        size: 'large',
      }) }}
      {% if showCheckboxes %}<div class="checkbox" title="{{ 'Select'|t('app') }}" aria-label="{{ 'Select'|t('app') }}"></div>{% endif %}
    {% endtag %}
  {% endfor %}

{% endapply -%}
