{% import '_includes/forms.twig' as forms %}

{% for key,label in fields %}
    {{ forms.textField({
        'label': label,
        'id': key,
        'name': key,
        'placeholder': 'XXXX-XXXX'
    }) }}

    {{ forms.submitButton({
        class: 'mfa-verify',
        label: 'Verify'|t('app'),
        spinner: true,
    }) }}
{% endfor %}